/* this is common config (mostly includes dev-env)
   WARN: If you need to add config only for specific-env: don't use this file (use appsettings.{env} instead)
*/
{
  "AnonymKey": 7675, // key to allow secure anonymous requests
  "AnonymDiffMinutes": 5, // maxDiff time. So if decoded anonymKey time more than 5min of current: request rejected
  "DomainUrl": "some.myUrl.io", // WARN: Due to we have inner tasks that execute without request we need this pre-defined url
  // WARN: ConnectionString must be in format server=...;database=...;uid=...;password=...;
  "ConnectionStrings": {
    "GatewayConnection": "",
    "MobileConnection": "",
    "GatewayPrivateIP": "",
    "MobilePrivateIP": "",
    "ExternalConnection": "",
    "ExternalPrivateIP": ""
  },
  "AmazonDisableStore": false,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "FLogger": {
    "DateTimeFormat": "yyyy-MM-dd HH:mm:ss.fff",
    "FilePath": "c:/wwwcontent/myLogs/logfile.txt",
    "ArchiveFilePath": "c:/wwwcontent/myLogs/log_{#}.txt", // WARN: archive & current file must be placed on the same disk c:/
    "ArchiveDateFormat": "yyyyMMdd",
    "ArchiveMaxFiles": 10, // save logs only for x days
    "FreeSpaceMB": 100, // collect logs till freeSpace > 100Mb, otherwise old archive files will be removed, if it's not enough current log-file will be cleared also
    "EnableHttpTraceLog": true,
    "ErrorsInMemoryCapacity": 200
  },
  "CookiesSettings": {
    "expirationMinutes": 1440 // 1 day
  },
  "ImagesSettings": {
    // maxWidth & maxHeight as restriction (big image will be decreased)
    "ProfileImage": {
      "Width": 280,
      "Height": 280
    },
    "MindsetImage": {
      "Width": 1184,
      "Height": 1184
    },
    "StoryImage": {
      "Width": 720,
      "Height": 1080
    },
    "NotificationImage": {
      "Width": 1184,
      "Height": 1184
    }
  },
  "AllowedHosts": "*",
  // WARN: CompressUri - post method on VideoCompress app
  "MaxRequestSizeMb": 300, // each FS. project can have own value in appsettings  
  // allow duplicates on these tokens
  // Date/time execution for every scheduledTask
}
